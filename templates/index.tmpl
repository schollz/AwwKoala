                <ul>
                {{range $i, $e := .Versions}}
                    <li><a href="/{{ $.Page }}/view?version={{$e}}">Version {{index $.VersionsText $i}}</a></li>
                {{end}}
                </ul>
            {{ end }}
            {{ if .ListPage }}
                  {{ range $index, $element := .ListItems }}
                    {{ $element }}
                  {{ end }}
            {{ end }}

            </div>
